{
  "name": "niem-specification-utils-js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "rules": "bin/rules"
  },
  "scripts": {
    "build": "node bin/rules && npm run test:json",
    "build:debug": "cross-env DEBUG=niem npm run build",
    "build:schema": "npm-run-all schema:*",
    "schema:convert": "json-dereference -s schemas/niem-rule.schema.yaml -o schemas/niem-rule.schema.json",
    "schema:beautify": "js-beautify schemas/niem-rule.schema.json -o schemas/niem-rule.schema.json -s 2",
    "schema:typedefs": "jsonschema-jsdoc schemas/niem-rule.schema.json src/assets/typedefs/index.js",
    "schema:test": "ajv -s schemas/json-schema-07.json -d schemas/niem-rule.schema.json",
    "test": "jest",
    "test:json": "ajv -s schemas/niem-rule.schema.json -d \"niem-*.json\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "cross-env": "^5.2.0",
    "debug": "^4.1.0",
    "fs-extra": "^7.0.1",
    "js-beautify": "^1.8.9",
    "json-dereference-cli": "^0.1.2",
    "json-schema-to-jsdoc": "github:cdmgtri/json-schema-to-jsdoc#dev",
    "npm-run-all": "^4.1.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "ajv": "^6.6.1",
    "ajv-cli": "^3.0.0",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0"
  }
}
