{
  "name": "niem-specification-utils-js",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "niem-defs": "bin/defs",
    "niem-rules": "bin/rules"
  },
  "scripts": {
    "build": "npm run build:json && npm run test:json",
    "build:json": "node bin/rules && node bin/defs",
    "build:debug": "cross-env DEBUG=niem npm run build",
    "build:schemas": "npm-run-all schema:*",
    "schema:convert": "yaml2json -p -s schemas",
    "schema:deref": "foreach -g \"schemas/niem-*.json\" -x \"json-dereference -s #{path} -o #{path}\"",
    "schema:beautify": "foreach -g \"schemas/niem-*.json\" -x \"js-beautify #{path} -o #{path}\"",
    "schema:test": "foreach -g \"schemas/niem-*.json\" -x \"ajv -s schemas/json-schema-07.json -d schemas/niem-rule.schema.json\"",
    "schema:typedefs": "jsonschema-jsdoc schemas/niem-spec.schema.json src/assets/typedefs/index.js",
    "test": "jest",
    "test:json": "ajv -s schemas/niem-rule.schema.json -d \"niem-*.json\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "cross-env": "^5.2.0",
    "debug": "^4.1.1",
    "foreach-cli": "^1.8.1",
    "fs-extra": "^7.0.1",
    "js-beautify": "^1.10.1",
    "json-dereference-cli": "^0.1.2",
    "json-schema-to-jsdoc": "github:cdmgtri/json-schema-to-jsdoc#dev",
    "npm-run-all": "^4.1.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "ajv": "^6.10.2",
    "ajv-cli": "^3.0.0",
    "coveralls": "^3.0.5",
    "jest": "^24.8.0"
  }
}
