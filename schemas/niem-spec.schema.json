{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "niem-spec.schema.json",
    "properties": {
        "NIEMSpecification": {
            "description": "Basic metadata about a NIEM specification.",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "Naming and Design Rules"
                },
                "id": {
                    "type": "string",
                    "example": "NDR"
                },
                "version": {
                    "type": "string",
                    "example": "NDR-4.0"
                },
                "versionLabel": {
                    "type": "string",
                    "example": "4.0"
                },
                "current": {
                    "type": "boolean",
                    "default": false
                },
                "niem": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": ["4.0", "4.1", "4.2"]
                },
                "link": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html"
                }
            }
        },
        "NIEMSection": {
            "description": "Basic metadata about a section in a NIEM specification.",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "example": "section_9.1.1.1"
                },
                "name": {
                    "type": "string",
                    "example": "9.1.1.1"
                },
                "link": {
                    "type": "string",
                    "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html#section_9.1.1.1"
                }
            }
        },
        "NIEMRule": {
            "description": "Information about a rule in a NIEM specification.",
            "type": "object",
            "properties": {
                "specification": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "example": "Naming and Design Rules"
                        },
                        "id": {
                            "type": "string",
                            "example": "NDR"
                        },
                        "version": {
                            "type": "string",
                            "example": "NDR-4.0"
                        },
                        "versionLabel": {
                            "type": "string",
                            "example": "4.0"
                        },
                        "current": {
                            "type": "boolean",
                            "default": false
                        },
                        "niem": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "example": ["4.0", "4.1", "4.2"]
                        },
                        "link": {
                            "type": "string",
                            "format": "uri",
                            "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html"
                        }
                    }
                },
                "section": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "example": "section_9.1.1.1"
                        },
                        "name": {
                            "type": "string",
                            "example": "9.1.1.1"
                        },
                        "link": {
                            "type": "string",
                            "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html#section_9.1.1.1"
                        }
                    }
                },
                "id": {
                    "type": "string",
                    "example": "rule_9-1"
                },
                "name": {
                    "type": "string",
                    "example": "rule-base-type-not-xml-ns"
                },
                "number": {
                    "type": "string",
                    "example": "9-1"
                },
                "title": {
                    "type": "string",
                    "example": "No base type in the XML namespace"
                },
                "link": {
                    "type": "string",
                    "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html#rule_9-1"
                },
                "applicability": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["REF", "EXT", "SET", "INS"]
                    },
                    "example": ["REF", "EXT"]
                },
                "classification": {
                    "example": "Constraint",
                    "type": "string",
                    "enum": ["Constraint", "Interpretation"]
                },
                "style": {
                    "example": "text",
                    "type": "string",
                    "enum": ["text", "schematron"]
                },
                "language": {
                    "type": "string",
                    "enum": ["all", "xml", "json"]
                },
                "pre": {
                    "type": "string",
                    "description": "Descriptive text that precedes a rule"
                },
                "text": {
                    "type": "string",
                    "description": "The descriptive text portion of a rule"
                },
                "post": {
                    "type": "string",
                    "description": "Descriptive text that follows a rule"
                },
                "schematron": {
                    "type": "string"
                }
            }
        },
        "NIEMDefinition": {
            "description": "Information about a definition in a NIEM specification.",
            "type": "object",
            "properties": {
                "specification": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string",
                            "example": "Naming and Design Rules"
                        },
                        "id": {
                            "type": "string",
                            "example": "NDR"
                        },
                        "version": {
                            "type": "string",
                            "example": "NDR-4.0"
                        },
                        "versionLabel": {
                            "type": "string",
                            "example": "4.0"
                        },
                        "current": {
                            "type": "boolean",
                            "default": false
                        },
                        "niem": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "example": ["4.0", "4.1", "4.2"]
                        },
                        "link": {
                            "type": "string",
                            "format": "uri",
                            "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html"
                        }
                    }
                },
                "section": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "string",
                            "example": "section_9.1.1.1"
                        },
                        "name": {
                            "type": "string",
                            "example": "9.1.1.1"
                        },
                        "link": {
                            "type": "string",
                            "example": "https://reference.niem.gov/niem/specification/naming-and-design-rules/4.0/niem-ndr-4.0.html#section_9.1.1.1"
                        }
                    }
                },
                "id": {
                    "type": "string",
                    "example": "definition_conformance_target_identifier"
                },
                "title": {
                    "type": "string",
                    "example": "conformance target identifier"
                },
                "text": {
                    "type": "string",
                    "description": "The text of the definition."
                },
                "link": {
                    "type": "string",
                    "example": "https://reference.niem.gov/niem/specification/model-package-description/3.0.1/model-package-description-3.0.1.html#definition_conformance_target_identifier"
                }
            }
        }
    }
}