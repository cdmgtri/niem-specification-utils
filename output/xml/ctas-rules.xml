    <ruleName/>
    <ruleID>rule_3-5</ruleID>
    <ruleURL>https://reference.niem.gov/niem/specification/conformance-targets-attribute/3.0/NIEM-CTAS-3.0-2014-07-31.html#rule_3-5</ruleURL>
