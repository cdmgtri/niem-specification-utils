    <ruleTitle>No reference to types in conformance targets namespace</ruleTitle>
    <ruleName/>
    <ruleID>rule_3-4</ruleID>
    <ruleURL>https://reference.niem.gov/niem/specification/conformance-targets-attribute/3.0/NIEM-CTAS-3.0-2014-07-31.html#rule_3-4</ruleURL>
    <ruleTargets/>
    <ruleClassification/>
